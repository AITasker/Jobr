# Jobr - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/jobr_dev

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Authentication
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Email Service
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
TESTING_STRIPE_SECRET_KEY=sk_test_your_testing_stripe_key_here
TESTING_VITE_STRIPE_PUBLIC_KEY=pk_test_your_testing_stripe_public_key_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# PhonePe Configuration
PHONEPE_MERCHANT_ID=your_phonepe_merchant_id_here
PHONEPE_SALT_KEY=your_phonepe_salt_key_here

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Application Configuration
NODE_ENV=development
PORT=5000

# Replit Integration (if deploying on Replit)
REPLIT_DB_URL=your_replit_db_url_here